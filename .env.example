# Configuration de l'API Backend
# URL de base de l'API REST (NestJS sur port 3002)
VITE_API_URL=http://localhost:3002

# URL du serveur WebSocket (Socket.IO - même serveur)
VITE_WS_URL=http://localhost:3002

# Configuration HTTPS/WSS pour vidéo sécurisée
# Mettre à 'true' pour activer HTTPS et WSS (nécessite USE_HTTPS=true côté backend)
VITE_USE_HTTPS=false

# Variables d'environnement optionnelles
# NODE_ENV=development
# PORT=5173

# Configuration de la base de données (si nécessaire côté frontend)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=votre_utilisateur
POSTGRES_PASSWORD=votre_mot_de_passe
POSTGRES_DB=OncoCollab

# IP externe (optionnel)
EXTERNAL_IP=votre_ip_externe
